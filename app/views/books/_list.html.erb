<div>
  <h2>User info</h2>
  <div><%= image_tag user.get_profile_image(100,100) %></div>
  <p>name</p>
  <p><%= user.name %></p>
  <p>introduction</p>
  <p><%= user.introduction %></p>
  <% if user == current_user %>
  <p><%= link_to "User info edit(ä»®)", edit_user_path(current_user.id) %></p>
  <% end %>
</div>

<div>
  <h2>New Book</h2>
  <%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>