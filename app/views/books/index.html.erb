<div>
  <h2>User info</h2>
  <div><%= image_tag 'sample-author1.jpg' %></div>
  <p>name</p>
  <p><%= current_user.name %></p>

</div>

<div>
  <h2>New Book</h2>
  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<div>
  <h2>Books</h2>
  <h4>Title</h4>
  <h4>Opinion</h4>
  <% @books.each do |book| %>
  <div>
    <p><%= link_to book.title, book_path(book.id) %></p>
    <p><%= book.body %></p>
  </div>
<% end %>
</div>

