<div>
  <h2>User_info</h2>
  <div><%= image_tag @book.user.get_profile_image(100,100) %></div>
  <p>name</p>
  <p><%= @book.user.name %></p>
  <p>introduction</p>
  <p><%= @book.user.introduction %></p>
  <p><%= link_to "User info edit(ä»®)", edit_user_path(current_user.id) %></p>
</div>

<div>
  <h2>New Book</h2>
  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<div>
  <h2>Books</h2>
  <h4>Title</h4>
  <h4>Opinion</h4>
  <% @books.each do |book| %>
  <div>
    <p><%= link_to book.title, book_path(book.id) %></p>
    <p><%= book.body %></p>
  </div>
<% end %>
</div>

