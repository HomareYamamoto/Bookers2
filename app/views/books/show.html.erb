<div>
  <h2>User_info</h2>
  <div><%= image_tag 'sample-author1.jpg' %></div>
  <p>name</p>
  <p><%= current_user.name %></p>
  <p>introduction</p>
  <p><%= current_user.introduction %></p>
</div>

<div>
  <h2>New Book</h2>
  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<div>
 <h2>Book detail</h2>
 <%= image_tag 'sample-author1.jpg' %>
<!--詳細ページへ飛べるリンクがここにもあるがlink_to book.title, book_path(book.id)だとエラーが出る。-->
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>


  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>
