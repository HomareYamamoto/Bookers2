<div>
  <%= flash[:notice] %>
</div>
<%= render 'list', user: @user %>


<div>
 <h2>Book detail</h2>
 <div><%= image_tag @book.user.get_profile_image(100,100) %></div>

  <p><%= link_to @book.title, book_path(@book.id) %></p>
  <p><%= @book.body %></p>


  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
  <% end %>
</div>
