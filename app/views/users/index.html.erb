<div>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <p>name</p>
  <p><%= current_user.name %></p>
  <p>introduction</p>
  <p><%= current_user.introduction %></p>
  <p><%= link_to "User info edit(ä»®)", edit_user_path(current_user.id) %></p>
</div>


<div>
  <h2>New Book</h2>
  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>


<div>
  <h2>Users</h2>
  <h4>image</h4>
  <h4>name</h4>
  <% @users.each do |user| %>
  <div>
    <%= image_tag user.get_profile_image(100,100) %>
    <p><%= user.name %></p>
    <p><%= link_to "show", user_path(user.id)%></p>
  </div>
<% end %>
</div>